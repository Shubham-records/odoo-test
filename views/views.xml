<odoo>
	<data>
		<record id="view_hr_employee_inherit" model="ir.ui.view">
			<field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
            	 <xpath expr="//form/sheet/notebook/page/group/group[@name='identification_group']" position="after">
            	 	<group string="Family Status">
            	 		<field name="marital"/>
                        <field name="spouse_complete_name" invisible="marital not in ['married', 'cohabitant']"/>
                        <field name="spouse_birthdate" invisible="marital not in ['married', 'cohabitant']"/>
                        <field name="children"/>
            	 	</group>
            	 </xpath>
			</field>
		</record>
	</data>
</odoo>
